        <!-- jQuery kodları -->
    <script>
        $(document).ready(function () {
            // Ana menü öğesine tıklama olayını tanımlayın
            $('.submenu-toggle').on('click', function (e) {
                e.preventDefault();

                // Tıklanan öğenin ebeveyn menü öğesini bulun
                var parentItem = $(this).closest('.menu-item');

                // Diğer tüm menülerin kapanmasını sağlamak için diğer açık menüleri kapatın
                $('.menu-item').not(parentItem).removeClass('active');
                $('.submenu').not(parentItem.find('.submenu')).slideUp();

                // Mevcut menü öğesini aç/kapat
                parentItem.toggleClass('active');
                parentItem.find('.submenu').slideToggle();
            });
        });
    </script>

