    <!-- jQuery'yi yükleyin -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        /* Ana menü stili */
        .menu-inner {
            list-style: none;
            padding: 0;
            width: 300px; /* Menü genişliği */
            background-color: white; /* Menü arka plan rengi beyaz */
            color: #333; /* Menü metin rengi koyu gri */
            font-family: Arial, sans-serif;
            border: 1px solid #ccc; /* Menü sınırları */
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Menü gölgesi */
        }

        .menu-item {
            border-bottom: 1px solid #eee; /* Menü öğeleri arasında hafif bir çizgi */
            position: relative; /* Sürgülü menü için konumlandırma */
        }

        .menu-link {
            text-decoration: none;
            display: flex;
            align-items: center;
            justify-content: space-between; /* İkonları sağa yasla */
            padding: 12px 20px;
            color: #333; /* Menü metin rengi */
            transition: background-color 0.3s ease, color 0.3s ease;
            cursor: pointer; /* Menü öğeleri tıklanabilir olsun */
        }

            .menu-link:hover {
                background-color: #fde4e6; /* Üzerine gelindiğinde kırmızıya dönük pembe */
                color: #d9534f; /* Üzerine gelindiğinde koyu kırmızı metin rengi */
            }

        .menu-icon {
            margin-right: 10px;
            color: #d9534f; /* İkonların kırmızıya dönük pembe rengi */
        }

        .submenu {
            display: none; /* Başlangıçta görünmez */
            padding-left: 20px; /* Ana menüden biraz içeride */
            background-color: #fde4e6; /* Alt menü arka plan rengi kırmızıya dönük pembe */
            color: #d9534f; /* Alt menü metin rengi */
        }

            .submenu .menu-item {
                border: none; /* Alt menü öğeleri arasında çizgi yok */
            }

            .submenu .menu-link {
                padding: 10px 20px; /* Alt menü içeriği */
                color: #d9534f; /* Alt menü metin rengi */
            }

                .submenu .menu-link:hover {
                    background-color: #fbd3d5; /* Alt menü öğelerinin üzerine gelindiğinde hafif pembe */
                    color: #d9534f; /* Alt menü metin rengi değişmeden kalır */
                }

        .menu-item.has-submenu .submenu-toggle:after {
            content: "▶";
            margin-left: auto;
            color: #d9534f; /* Alt menü okları kırmızıya dönük pembe */
        }

        .menu-item.has-submenu.active .submenu-toggle:after {
            content: "▼";
        }

        .menu-item.has-submenu.active .submenu {
            display: block; /* Aktif menülerin altındaki alt menüler görünür */
        }
    </style>
</head>
